<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dip"
    android:orientation="vertical">

    <TextView
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:text="REGISTRO"
        android:textSize="60sp"
        tools:ignore="InvalidId" />

    <EditText android:id="@+id/RegUsuario"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Usuario"
        android:inputType="text" />

    <EditText android:id="@+id/Regpass"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
         />

    <EditText android:id="@+id/RegNombre"
        android:layout_marginTop="15dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Nombre"
        android:inputType="textEmailAddress" />

    <EditText android:id="@+id/RegApellidos"
        android:layout_marginTop="15dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Apellidos"
        android:inputType="textEmailAddress" />

    <Button android:id="@+id/RegbtnRegister"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="enviar"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" />

    <Button android:id="@+id/RegbtnCancelar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Cancelar"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" />

    <TextView android:id="@+id/link_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="40dip"
        android:text="Ya tienes cuenta! Accede!"
        android:gravity="center"
        android:textSize="20dip"
        android:textColor="#0b84aa"/>



</LinearLayout>